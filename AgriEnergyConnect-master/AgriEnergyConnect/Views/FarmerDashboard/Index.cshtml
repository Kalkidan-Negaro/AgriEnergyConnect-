@{
    ViewData["Title"] = "Farmer Dashboard";
}

<h1 style="color: #343a40;">Farmer Dashboard</h1>

<p>
    <a asp-action="AddProduct" class="btn btn-primary" style="background-color: #006600; border-color: #006600;">Add Product</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="background-color: #cc6600; color: white;">
            <th>Name</th>
            <th>Category</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@(product.ProductionDate.ToString("dd-MM-yyyy"))</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8f9fa; 
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-primary {
        padding: 10px 20px;
        font-size: 1rem;
        color: white;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #dddddd;
    }

    th {
        background-color: #cc6600; 
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 102, 0, 0.1);
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #dddddd;
    }
</style>
